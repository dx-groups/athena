{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  globals: {
    window: false,
  },
  "rules": {
    'semi': [2, 'never'],
    'max-len': [1, { "code": 120, "ignoreComments": true, "ignoreStrings": true }],
    'no-console': [0],
    "generator-star-spacing": [0],
    "consistent-return": [0],
    "global-require": [0],
    "no-else-return": [0],
    "no-restricted-syntax": [0],
    "no-use-before-define": [0],
    "no-nested-ternary": [0],
    "arrow-body-style": [0],
    "no-bitwise": [0],
    "no-cond-assign": [0],
    "require-yield": [1],
    "no-param-reassign": [0],
    "no-shadow": [0],
    "no-underscore-dangle": [0],
    "import/extensions": [0],
    "import/no-unresolved": [0],
    'import/no-dynamic-require': [0],
    "import/no-extraneous-dependencies": [0],
    "jsx-a11y/no-static-element-interactions": [0],
  }
}
